rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /articles/{articleId} {
      // Anyone can read published articles
      allow read: if true;

      // Validate schema on create
      allow create: if isValidArticle(request.resource.data);

      // Validate schema on update
      allow update: if isValidArticle(request.resource.data);

      // Allow delete
      allow delete: if true;
    }

    function isValidArticle(data) {
      return data.title is string &&
             data.title.size() > 0 &&
             data.content is string &&
             data.content.size() > 0 &&
             data.author is string &&
             data.description is string &&
             data.category is string &&
             data.thumbnailURL is string &&
             data.isPublished is bool &&
             data.tags is list;
    }
  }
}
